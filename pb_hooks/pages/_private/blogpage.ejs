<script server>
    const { formatDateTime, getImageUrl } = resolve('../../utils/common')
</script>

<div class="hero bg-base-100 py-12">
    <div class="hero-content gap-x-12 max-w-9xl grid grid-cols-7">
        <!-- Blog Image -->
        <div class="col-span-7 md:col-span-3">
            <img
                src="<%= getImageUrl(singleBlog) %>"
                class="rounded-lg shadow-lg object-cover m-0"
                alt="<%= singleBlog.title %> image"
            />
        </div>
        <!-- Blog Content -->
        <div
            class="col-span-7 md:col-span-4 prose lg:prose-xl max-w-none self-start xl:mt-24"
        >
            <h1
                class="mb-0 font-extrabold text-4xl sm:text-5xl lg:text-6xl leading-tight"
            >
                <%= singleBlog.title %>
            </h1>
            <!-- Meta Info -->
            <div class="items-center gap-4 text-sm text-base-content/70">
                <div class="flex justify-between w-full">
                    <span>Written by <strong>Justin K</strong></span>
                    <span
                        >posted <%= formatDateTime(new Date(singleBlog.created))
                        %></span
                    >
                </div>
            </div>
            <p class="text-base-content/80 mb-6 min-w-80">
                <%- singleBlog.content1 %>
            </p>
        </div>
        <div class="col-span-7">
            <p class="text-base-content/80 mb-6 gap-12">
                <%- singleBlog.content2 %>
            </p>
        </div>
    </div>
</div>
