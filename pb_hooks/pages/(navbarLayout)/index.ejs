    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold">
                <%= (data.metadata.find(meta => meta.name ===
                "og:site_name")).content %>
            </h1>
            <p class="pb-6 m-0">
                <a href="/blog/posts">Here</a>, you can find snapshots of my
                thoughts, unfiltered.
            </p>
            <div class="mockup-code text-left">
                <pre
                    data-prefix="$"
                ><code>Console.WriteLine("my thoughts...");</code></pre>
            </div>
        </div>
    </div>
</div>
