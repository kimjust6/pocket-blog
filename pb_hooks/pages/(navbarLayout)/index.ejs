<div class="hero min-h-[calc(100vh-4rem)] bg-base-200">
    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold -mt-20">
                <%= (data.metadata.find(meta => meta.name ===
                "og:site_name")).content %>
            </h1>
            <p class="pb-6 m-0">
                <a
                    class="no-underline hover:text-primary transition-all"
                    href="/blog/posts"
                    >Here</a
                >, find out what mistakes I have made and lessons I may have
                learned along the way.
            </p>
            <a href="/blog/posts" class="no-underline">
                <div class="mockup-code text-left group transition-all">
                    <pre
                        class="h-full group-hover:text-primary transition-all"
                        data-prefix="$"
                    ><code>Console.WriteLine("my thoughts...");</code></pre>
                </div>
            </a>
        </div>
    </div>
</div>
