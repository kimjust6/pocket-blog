<script src="https://unpkg.com/petite-vue"></script>
<script type="module">
    import { createApp } from 'https://unpkg.com/petite-vue?module'

    //consts
    const Constants = {
        navigation: [
            // { title: 'Home', url: '/' },
            { title: 'Blog Posts', url: '/blog/posts' },
        ],
    }

    function Navbar(props) {
        return {
            count: props.initialCount,
            // on mount
            mounted() {},
        }
    }

    createApp({
        Navbar,
        Constants,
    }).mount()
</script>
<!doctype html>
<html lang="en" data-theme="cupcake">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title><%= data.siteName %></title>
        <link href="<%=asset('/app.css')%>" rel="stylesheet" />
    </head>
    <body>
        <div class="drawer">
            <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content flex flex-col">
                <!-- Navbar -->
                <div class="navbar bg-base-300 w-full fixed">
                    <div class="flex-none lg:hidden">
                        <label
                            for="my-drawer-3"
                            aria-label="open sidebar"
                            class="btn btn-square btn-ghost"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                class="inline-block h-6 w-6 stroke-current"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"
                                ></path>
                            </svg>
                        </label>
                    </div>
                    <div class="mx-2 flex-1 px-2"><a href="/">Home </a></div>
                    <div class="hidden flex-none lg:block">
                        <ul class="menu menu-horizontal" v-scope="Constants">
                            <div
                                v-for="(item, index) in Constants.navigation"
                                :key="index"
                            >
                                <li>
                                    <a :href="item.url">{{ item.title }}</a>
                                </li>
                            </div>
                        </ul>
                    </div>
                </div>
                <article class="prose max-w-none"><%- slot %></article>
            </div>
            <div class="drawer-side">
                <label
                    for="my-drawer-3"
                    aria-label="close sidebar"
                    class="drawer-overlay"
                ></label>
                <ul class="menu bg-base-200 min-h-full w-80 p-4">
                    <!-- Sidebar content here -->
                    <div
                        v-for="(item, index) in Constants.navigation"
                        :key="index"
                    >
                        <li>
                            <a :href="item.url">{{ item.title }}</a>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </body>
</html>
